@model ProyectoFinalEmbutidosElTio.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Resumen General";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Summary Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Card 1 -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col">
        <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Pedidos</h3>
        <div class="mt-2 flex items-baseline gap-2">
             <span class="text-3xl font-bold text-gray-900">@Model.TotalPedidos</span>
             <span class="text-sm font-medium text-green-600">+12% ↗</span>
        </div>
        <p class="mt-1 text-xs text-gray-400">En el último mes</p>
    </div>

    <!-- Card 2 -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col">
         <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Ingresos Totales</h3>
        <div class="mt-2 flex items-baseline gap-2">
             <span class="text-3xl font-bold text-gray-900">
                <!-- Placeholder calculation, usually comes from DB -->
                $1,250.00 
             </span>
             <span class="text-sm font-medium text-green-600">↗</span>
        </div>
        <p class="mt-1 text-xs text-gray-400">Total acumulado</p>
    </div>

     <!-- Card 3 -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col">
         <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Usuarios Activos</h3>
        <div class="mt-2 flex items-baseline gap-2">
             <span class="text-3xl font-bold text-gray-900">@Model.TotalUsuarios</span>
             <span class="text-sm font-medium text-green-600">+5</span>
        </div>
        <p class="mt-1 text-xs text-gray-400">Registrados recientemente</p>
    </div>

    <!-- Card 4 -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 flex flex-col">
         <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">Productos</h3>
        <div class="mt-2 flex items-baseline gap-2">
             <span class="text-3xl font-bold text-gray-900">@Model.TotalProductos</span>
        </div>
        <div class="mt-auto pt-4">
             <a asp-controller="AdminProductos" asp-action="Create" class="text-xs font-semibold text-orange-600 hover:text-orange-700">
                 + Agregar Nuevo
             </a>
        </div>
    </div>
</div>

<!-- Main Content Area: Charts & Tables -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    
    <!-- Recent Orders (Takes up 2 cols) -->
    <div class="lg:col-span-2 bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-100 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-800">Pedidos Recientes</h3>
            <a href="#" class="text-sm text-orange-600 hover:text-orange-700 font-medium">Ver todos</a>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-100">
                <thead class="bg-gray-50/50">
                    <tr>
                         <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                         <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cliente</th>
                         <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                         <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Monto</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var pedido in Model.UltimosPedidos)
                    {
                        <tr class="hover:bg-gray-50/50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">#@pedido.IdPedido</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="h-8 w-8 rounded-full bg-gray-100 flex items-center justify-center text-xs font-bold text-gray-500">
                                        @pedido.Usuario?.Nombre.Substring(0,1)
                                    </div>
                                    <div class="ml-3">
                                        <p class="text-sm font-medium text-gray-900">@pedido.Usuario?.Nombre</p>
                                        <p class="text-xs text-gray-400">@pedido.FechaPedido?.ToString("dd MMM")</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2.5 py-0.5 rounded-full text-xs font-medium 
                                    @(pedido.IdEstadoPedido == 2 ? "bg-green-100 text-green-800" : 
                                      pedido.IdEstadoPedido == 1 ? "bg-yellow-100 text-yellow-800" : "bg-gray-100 text-gray-800")">
                                    @pedido.EstadoPedido?.NombreEstado
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-gray-900">
                                $@pedido.Total
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Quick Actions / Mini Stats -->
    <div class="space-y-6">
        <!-- Quick Action Card -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Acciones Rápidas</h3>
            <div class="space-y-3">
                <a asp-controller="AdminProductos" asp-action="Create" class="flex items-center justify-between p-3 rounded-lg border border-gray-200 hover:border-orange-500 hover:bg-orange-50 transition-all group cursor-pointer text-decoration-none">
                    <span class="text-sm font-medium text-gray-700 group-hover:text-orange-700">Nuevo Producto</span>
                    <span class="text-gray-400 group-hover:text-orange-500">→</span>
                </a>
                 <a asp-controller="AdminNoticias" asp-action="Create" class="flex items-center justify-between p-3 rounded-lg border border-gray-200 hover:border-orange-500 hover:bg-orange-50 transition-all group cursor-pointer text-decoration-none">
                    <span class="text-sm font-medium text-gray-700 group-hover:text-orange-700">Publicar Noticia</span>
                    <span class="text-gray-400 group-hover:text-orange-500">→</span>
                </a>
                <a asp-controller="Dashboard" asp-action="Pagos" class="flex items-center justify-between p-3 rounded-lg border border-gray-200 hover:border-blue-500 hover:bg-blue-50 transition-all group cursor-pointer text-decoration-none">
                    <span class="text-sm font-medium text-gray-700 group-hover:text-blue-700">Ver Reporte Pagos</span>
                    <span class="text-gray-400 group-hover:text-blue-500">→</span>
                </a>
            </div>
        </div>

        <!-- System Status -->
        <div class="bg-gray-900 rounded-xl shadow-sm p-6 text-white">
             <h3 class="text-base font-semibold mb-4 text-gray-200">Estado del Sistema</h3>
             <div class="space-y-4">
                 <div>
                     <div class="flex justify-between text-xs mb-1">
                         <span class="text-gray-400">Servidor</span>
                         <span class="text-green-400">En línea</span>
                     </div>
                     <div class="w-full bg-gray-700 rounded-full h-1.5">
                        <div class="bg-green-500 h-1.5 rounded-full" style="width: 100%"></div>
                    </div>
                 </div>
                 <div>
                     <div class="flex justify-between text-xs mb-1">
                         <span class="text-gray-400">Base de Datos</span>
                         <span class="text-green-400">Conectado</span>
                     </div>
                     <div class="w-full bg-gray-700 rounded-full h-1.5">
                        <div class="bg-green-500 h-1.5 rounded-full" style="width: 100%"></div>
                    </div>
                 </div>
             </div>
        </div>
    </div>
</div>
