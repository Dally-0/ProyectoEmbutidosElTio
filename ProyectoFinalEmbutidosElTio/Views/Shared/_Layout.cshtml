<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Embutidos El Tío</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto+Slab:wght@300;400;700;900&display=swap" rel="stylesheet">

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['"Open Sans"', 'sans-serif'],
                        slab: ['"Roboto Slab"', 'serif'],
                    },
                    colors: {
                        rust: { 500: '#C0392B', 600: '#A93226', 700: '#922B21' },
                        charcoal: { 800: '#333333', 900: '#151515' },
                        parchment: { 100: '#FDFBF7', 200: '#F5F5F5' },
                        gold: { 400: '#F7DC6F', 500: '#D4AC0D', 600: '#B7950B' }
                    },
                    boxShadow: {
                        'glow': '0 0 15px rgba(212, 172, 13, 0.3)',
                    },
                    screens: {
                        'xs': '475px', // Breakpoint extra pequeño si hace falta
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Efecto hover dorado */
        .nav-link {
            position: relative;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: -2px;
                left: 0;
                background-color: #D4AC0D;
                transition: width 0.3s ease;
            }

            .nav-link:hover::after {
                width: 100%;
            }

        /* Evita parpadeos en carga */
        [x-cloak] {
            display: none !important;
        }
    </style>
</head>
<body class="flex flex-col min-h-screen bg-parchment-200 text-charcoal-800 font-sans">

    <header class="fixed w-full z-50 top-0 shadow-xl bg-charcoal-900 border-b-4 border-rust-600 h-24">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full relative">
            <div class="flex justify-between items-center h-full">

                <div class="flex-1 flex justify-start items-center">

                    <button id="mobile-menu-btn" class="md:hidden text-parchment-100 hover:text-gold-500 focus:outline-none p-2">
                        <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>

                    <div class="hidden md:flex space-x-6">
                        <a asp-controller="Home" asp-action="Index" class="nav-link text-parchment-100 font-slab font-bold uppercase tracking-wider text-sm hover:text-gold-500 transition-colors">Inicio</a>
                        <a asp-controller="Tienda" asp-action="Index" class="nav-link text-parchment-100 font-slab font-bold uppercase tracking-wider text-sm hover:text-gold-500 transition-colors">Tienda</a>
                        <a asp-controller="Noticias" asp-action="Index" class="nav-link text-parchment-100 font-slab font-bold uppercase tracking-wider text-sm hover:text-gold-500 transition-colors">Noticias</a>
                        <a asp-controller="Home" asp-action="About" class="nav-link text-parchment-100 font-slab font-bold uppercase tracking-wider text-sm hover:text-gold-500 transition-colors">Nosotros</a>
                    </div>
                </div>

                <div class="w-0 flex justify-center relative">
                    <a asp-controller="Home" asp-action="Index" class="hidden md:block group absolute -top-2 md:-top-10 transition-all duration-500 hover:scale-110 z-50">
                        <img src="~/img/EMBUTIDOS EL TIO (500 x 300 px).png"
                             alt="Embutidos El Tío"
                             class="logo-floating h-20 md:h-32 w-auto max-w-none object-contain filter drop-shadow-lg" />
                    </a>
                </div>

                <div class="flex-1 flex justify-end items-center px-2">
                    <partial name="_LoginPartial" />
                </div>
            </div>

            <div id="mobile-menu" class="hidden md:hidden absolute top-24 left-0 w-full bg-charcoal-900 border-t border-rust-600 shadow-xl z-40">
                <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 text-center border-b-4 border-rust-600">
                    <a asp-controller="Home" asp-action="Index" class="block px-3 py-2 text-base font-slab font-bold text-parchment-100 hover:text-gold-500 hover:bg-gray-800 rounded-md">INICIO</a>
                    <a asp-controller="Tienda" asp-action="Index" class="block px-3 py-2 text-base font-slab font-bold text-parchment-100 hover:text-gold-500 hover:bg-gray-800 rounded-md">TIENDA</a>
                    <a asp-controller="Noticias" asp-action="Index" class="block px-3 py-2 text-base font-slab font-bold text-parchment-100 hover:text-gold-500 hover:bg-gray-800 rounded-md">NOTICIAS</a>
                    <a asp-controller="Home" asp-action="Nosotros" class="block px-3 py-2 text-base font-slab font-bold text-parchment-100 hover:text-gold-500 hover:bg-gray-800 rounded-md">NOSOTROS</a>
                </div>
            </div>
        </nav>
    </header>
    <!-- Main Content Padded for Fixed Header -->

    <main role="main" class="flex-grow pt-20">

        @RenderBody()

    </main>



    <footer class="bg-charcoal-900 text-parchment-200 border-t-8 border-rust-600 relative overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-full opacity-5 pointer-events-none bg-[url('https://www.transparenttextures.com/patterns/wood-pattern.png')]"></div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative z-10">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-12 text-center md:text-left">

                <div class="md:col-span-4 space-y-6">
                    <div>
                        <h3 class="text-3xl font-slab font-black text-white tracking-wide uppercase">Embutidos <span class="text-rust-500">El Tío</span></h3>
                        <p class="text-gold-500 font-serif italic mt-1">"El sabor de la tradición."</p>
                    </div>
                    <p class="text-gray-400 text-sm leading-relaxed">
                        Suscríbete a nuestro boletín para recibir recetas exclusivas y descuentos.
                    </p>
                    <form class="flex justify-center md:justify-start">
                        <input type="email" placeholder="Correo..." class="bg-charcoal-800 text-white px-4 py-2 w-full max-w-xs outline-none border border-gray-700 focus:border-gold-500 rounded-l-sm">
                        <button class="bg-gold-500 text-charcoal-900 px-4 py-2 font-bold hover:bg-white transition-colors rounded-r-sm">➤</button>
                    </form>
                </div>

                <div class="md:col-span-2 md:col-start-6">
                    <h4 class="text-white font-slab font-bold uppercase mb-6 border-b border-gray-700 pb-2 inline-block">Explorar</h4>
                    <ul class="space-y-3 text-sm text-gray-400">
                        <li><a href="#" class="hover:text-gold-500">Nuestros Cortes</a></li>
                        <li><a href="#" class="hover:text-gold-500">Recetas Parrilleras</a></li>
                        <li><a href="#" class="hover:text-gold-500">Eventos</a></li>
                    </ul>
                </div>

                <div class="md:col-span-3">
                    <h4 class="text-white font-slab font-bold uppercase mb-6 border-b border-gray-700 pb-2 inline-block">Visítanos</h4>
                    <ul class="space-y-4 text-sm text-gray-400 flex flex-col items-center md:items-start">
                        <li class="flex items-start gap-3">
                            <span class="text-rust-500 mt-1">📍</span>
                            <span>Av. Las Américas #450<br>Cochabamba</span>
                        </li>
                        <li class="flex items-center gap-3">
                            <span class="text-rust-500">📞</span>
                            <span class="text-white font-bold">+591 700-12345</span>
                        </li>
                    </ul>
                </div>

                <div class="md:col-span-2 flex flex-col items-center md:items-end">
                    <h4 class="text-white font-slab font-bold uppercase mb-6 border-b border-gray-700 pb-2 inline-block text-xs">Pagos</h4>
                    <div class="flex gap-2 opacity-70 grayscale hover:grayscale-0 transition-all">
                        <div class="w-10 h-6 bg-white rounded flex items-center justify-center text-[10px] font-bold text-blue-800">VISA</div>
                        <div class="w-10 h-6 bg-white rounded flex items-center justify-center text-[10px] font-bold text-red-600">MC</div>
                    </div>
                </div>
            </div>

            <div class="border-t border-gray-800 pt-8 mt-8 flex flex-col md:flex-row justify-between items-center text-xs text-gray-500 text-center">
                <p>&copy; 2026 EMUTIDOS EL TÍO.</p>
                <p class="mt-2 md:mt-0">Diseñado con <span class="text-rust-500">❤</span> para los parrilleros.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const btn = document.getElementById('mobile-menu-btn');
            const menu = document.getElementById('mobile-menu');

            btn.addEventListener('click', () => {
                menu.classList.toggle('hidden');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>