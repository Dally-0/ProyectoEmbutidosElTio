@model IEnumerable<ProyectoFinalEmbutidosElTio.Models.Pedido>

@{
    ViewData["Title"] = "Gestión de Pedidos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Historial de Pedidos</h1>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full leading-normal">
            <thead>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        ID
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Fecha
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Cliente
                    </th>

                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Método
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Total
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Estado
                    </th>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <p class="text-gray-900 whitespace-no-wrap font-mono">#@item.IdPedido</p>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <p class="text-gray-900 whitespace-no-wrap">@item.FechaPedido?.ToString("dd/MM/yyyy HH:mm")</p>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                         <p class="text-gray-900 whitespace-no-wrap">@item.Usuario?.Nombre @item.Usuario?.ApPaterno</p>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        @{
                            var metodos = ViewData["MetodosPago"] as Dictionary<int, string>;
                            var metodo = metodos != null && metodos.ContainsKey(item.IdPedido) ? metodos[item.IdPedido] : "Desconocido";
                            var colorClass = metodo == "PayPal" ? "text-blue-700 bg-blue-100" : 
                                             metodo == "Stripe" ? "text-indigo-700 bg-indigo-100" : "text-gray-700 bg-gray-100";
                        }
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @colorClass">@metodo</span>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <p class="text-gray-900 font-bold whitespace-no-wrap">$@item.Total.ToString("N2")</p>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                         <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                            @(item.IdEstadoPedido == 4 ? "bg-green-100 text-green-800" : 
                              item.IdEstadoPedido == 1 ? "bg-yellow-100 text-yellow-800" : "bg-gray-100 text-gray-800")">
                             @item.EstadoPedido?.NombreEstado
                         </span>
                    </td>
                    <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                        <div class="flex flex-col gap-2">
                            <a asp-action="Details" asp-route-id="@item.IdPedido" class="text-blue-600 hover:text-blue-900 text-xs font-semibold">Ver Detalles</a>
                            
                            <form asp-action="UpdateStatus" method="post" class="flex flex-col gap-1">
                                <input type="hidden" name="id" value="@item.IdPedido" />
                                <div class="flex gap-1">
                                    <select name="idEstado" class="text-xs border-gray-300 rounded shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                                        @if (ViewData["Estados"] is List<ProyectoFinalEmbutidosElTio.Models.EstadoPedido> estados)
                                        {
                                            foreach (var estado in estados)
                                            {
                                                var isSelected = item.IdEstadoPedido == estado.IdEstadoPedido ? "selected" : null;
                                                <option value="@estado.IdEstadoPedido" selected="@isSelected">
                                                    @estado.NombreEstado
                                                </option>
                                            }
                                        }
                                    </select>
                                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white text-xs font-bold py-1 px-2 rounded transition">
                                        ✓
                                    </button>
                                </div>
                            </form>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
