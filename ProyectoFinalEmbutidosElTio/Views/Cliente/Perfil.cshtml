@model ProyectoFinalEmbutidosElTio.Models.ViewModels.PerfilViewModel

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-gray-900">Mi Perfil</h2>
        <p class="text-sm text-gray-500">Gestiona tu informaci√≥n personal y revisa tus pedidos.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Secci√≥n Datos Personales (Col 1) -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6 h-fit">
            <div class="flex items-center gap-3 mb-6 border-b border-gray-100 pb-4">
                <div class="w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center text-orange-600">
                    <i class="bi bi-person-circle text-xl"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-800">Mis Datos</h3>
            </div>
            
            <form class="space-y-4">
                <div>
                    <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">Nombre</label>
                    <input type="text" class="w-full bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block p-2.5" value="@Model.Usuario.Nombre" readonly disabled>
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">Apellido Paterno</label>
                    <input type="text" class="w-full bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block p-2.5" value="@Model.Usuario.ApPaterno" readonly disabled>
                </div>
                 <div>
                    <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">Apellido Materno</label>
                    <input type="text" class="w-full bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block p-2.5" value="@Model.Usuario.ApMaterno" readonly disabled>
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">Correo Electr√≥nico</label>
                    <input type="text" class="w-full bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block p-2.5" value="@Model.Usuario.Correo" readonly disabled>
                </div>
                <div>
                    <label class="block text-xs font-medium text-gray-500 uppercase tracking-wide mb-1">Celular</label>
                    <input type="text" class="w-full bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-orange-500 focus:border-orange-500 block p-2.5" value="@Model.Usuario.Celular" readonly disabled>
                </div>
            </form>
        </div>

        <!-- Secci√≥n Historial de Compras (Col 2 & 3) -->
        <div class="lg:col-span-2 bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden h-fit">
            <div class="px-6 py-5 border-b border-gray-100 flex justify-between items-center bg-gray-50/30">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center text-green-600">
                        <i class="bi bi-bag-check-fill text-xl"></i>
                    </div>
                     <h3 class="text-lg font-semibold text-gray-800">Historial de Compras</h3>
                </div>
            </div>

            <div class="overflow-x-auto">
                @if (Model.Pedidos != null && Model.Pedidos.Any())
                {
                    <table class="min-w-full divide-y divide-gray-100">
                        <thead class="bg-gray-50/50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"># Pedido</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-100">
                            @foreach (var pedido in Model.Pedidos)
                            {
                                <tr class="hover:bg-gray-50/50 transition-colors">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-600">
                                        #@pedido.IdPedido
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                                        @pedido.FechaPedido?.ToString("dd MMM yyyy, HH:mm")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                         @if (pedido.EstadoPedido?.NombreEstado == "Entregado")
                                        {
                                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 border border-green-200">
                                                Entregado
                                            </span>
                                        }
                                        else if (pedido.EstadoPedido?.NombreEstado == "Pendiente")
                                        {
                                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 border border-yellow-200">
                                                Pendiente
                                            </span>
                                        }
                                        else if (pedido.EstadoPedido?.NombreEstado == "En Proceso")
                                        {
                                             <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">
                                                En Proceso
                                             </span>
                                        }
                                        else
                                        {
                                            <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 border border-gray-200">
                                                @pedido.EstadoPedido?.NombreEstado
                                            </span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-bold text-gray-900">
                                        Bs @pedido.Total.ToString("F2")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="p-8 text-center text-gray-500">
                        <div class="text-4xl mb-3">üõçÔ∏è</div>
                        <p class="text-lg font-medium">A√∫n no has realizado ninguna compra.</p>
                        <p class="text-sm mt-1">¬°Explora nuestra tienda y realiza tu primer pedido!</p>
                        <div class="mt-4">
                            <a asp-controller="Tienda" asp-action="Index" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
                                Ir a la Tienda
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
