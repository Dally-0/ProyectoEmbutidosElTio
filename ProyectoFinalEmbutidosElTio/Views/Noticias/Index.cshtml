@model IEnumerable<ProyectoFinalEmbutidosElTio.Models.Noticia>

@{
    ViewData["Title"] = "Noticias";
    // Array de im치genes para variar el dise침o visualmente
    var images = new string[] {
        "https://images.unsplash.com/photo-1544025162-d76694265947?q=80&w=800&auto=format&fit=crop",
        "https://images.unsplash.com/photo-1627993079948-4394017c6039?q=80&w=800&auto=format&fit=crop",
        "https://images.unsplash.com/photo-1603048297172-c92544798d5e?q=80&w=800&auto=format&fit=crop",
        "https://images.unsplash.com/photo-1558030006-479063696f51?q=80&w=800&auto=format&fit=crop",
        "https://images.unsplash.com/photo-1504754524776-8f4f37790ca0?q=80&w=800&auto=format&fit=crop",
        "https://images.unsplash.com/photo-1595254922129-9e8e04b2c142?q=80&w=800&auto=format&fit=crop"
    };
}

<div class="relative min-h-screen bg-charcoal-900 -mt-24 pt-48 pb-24 overflow-hidden">
    <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/wood-pattern.png')] opacity-5 pointer-events-none"></div>
    <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-gradient-to-b from-rust-900/20 to-transparent blur-3xl pointer-events-none"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">

        <div class="text-center mb-20 animate-fade-in-down">
            <span class="text-gold-500 font-slab font-bold tracking-[0.3em] uppercase text-xs md:text-sm block mb-4">Blog & Novedades</span>
            <h1 class="text-5xl md:text-7xl font-black text-white uppercase leading-none drop-shadow-2xl mb-6">
                Cr칩nicas del <span class="text-transparent bg-clip-text bg-gradient-to-r from-rust-500 to-red-600">Sabor</span>
            </h1>
            <p class="text-gray-400 text-lg md:text-xl font-serif italic max-w-2xl mx-auto">
                Descubre nuestras 칰ltimas creaciones, consejos de parrilla y eventos exclusivos.
            </p>
            <div class="w-24 h-1 bg-gradient-to-r from-transparent via-gold-500 to-transparent mx-auto mt-8"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
            @{
                int index = 0;
            }
            @foreach (var item in Model)
            {
                // Seleccionar imagen basada en 칤ndice para variedad
                string imgUrl = images[index % images.Length];
                index++;

                <article class="group bg-[#151515] border border-white/5 hover:border-gold-500/50 flex flex-col h-full overflow-hidden transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_0_30px_rgba(234,179,8,0.1)] rounded-sm">

                    <div class="h-56 overflow-hidden relative">
                        <img src="@imgUrl" alt="Noticia" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 filter brightness-75 group-hover:brightness-100">
                        <div class="absolute inset-0 bg-gradient-to-t from-[#151515] via-transparent to-transparent"></div>

                        <div class="absolute top-4 left-4 bg-black/80 backdrop-blur-md border border-white/10 px-3 py-2 text-center rounded-sm">
                            <span class="block text-2xl font-black text-gold-500 leading-none font-slab">@item.FechaPublicacion?.Day</span>
                            <span class="block text-[10px] text-white uppercase tracking-widest">@item.FechaPublicacion?.ToString("MMM")</span>
                        </div>
                    </div>

                    <div class="p-8 flex-grow flex flex-col relative z-10 border-t border-white/5">

                        <h2 class="text-2xl font-black font-slab text-white mb-4 leading-tight group-hover:text-gold-500 transition-colors cursor-pointer"
                            onclick="openModal(this)"
                            data-title="@item.Titulo"
                            data-author="@(item.UsuarioAdmin != null ? $"{item.UsuarioAdmin.Nombre} {item.UsuarioAdmin.ApPaterno}" : "El T칤o")"
                            data-date="@item.FechaPublicacion?.ToString("dd 'de' MMMM, yyyy")"
                            data-content="@item.TextoNoticia"
                            data-image="@imgUrl">
                            @item.Titulo
                        </h2>

                        <p class="text-gray-400 text-sm leading-relaxed mb-6 line-clamp-3 font-sans font-light flex-grow">
                            @item.TextoNoticia
                        </p>

                        <div class="w-full h-px bg-white/10 mb-6"></div>

                        <div class="flex items-center justify-between mt-auto">
                            <span class="text-xs font-bold text-rust-500 uppercase tracking-widest flex items-center gap-2">
                                <span class="w-2 h-2 rounded-full bg-rust-500"></span>
                                @(item.UsuarioAdmin != null ? item.UsuarioAdmin.Nombre : "Admin")
                            </span>

                            <button onclick="openModal(this)"
                                    data-title="@item.Titulo"
                                    data-author="@(item.UsuarioAdmin != null ? $"{item.UsuarioAdmin.Nombre} {item.UsuarioAdmin.ApPaterno}" : "El T칤o")"
                                    data-date="@item.FechaPublicacion?.ToString("dd 'de' MMMM, yyyy")"
                                    data-content="@item.TextoNoticia"
                                    data-image="@imgUrl"
                                    class="text-white text-xs font-bold uppercase tracking-[0.2em] border-b border-transparent hover:border-gold-500 hover:text-gold-500 transition-all pb-1">
                                Leer M치s
                            </button>
                        </div>
                    </div>
                </article>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-32 border-2 border-dashed border-white/10 rounded-sm bg-white/5">
                <div class="text-6xl mb-6 text-white/20">游닗</div>
                <h3 class="text-2xl font-black font-slab text-white mb-2">Sin Noticias Recientes</h3>
                <p class="text-gray-500 font-light">Estamos cocinando nuevas historias para ti.</p>
            </div>
        }

    </div>

    <div id="newsModal" class="fixed inset-0 z-[100] hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-black/90 backdrop-blur-sm transition-opacity opacity-0" id="modalBackdrop" onclick="closeModal()"></div>

        <div class="fixed inset-0 overflow-y-auto">
            <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
                <div class="relative transform overflow-hidden rounded-sm bg-[#1a1a1a] text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-4xl border border-white/10 opacity-0 scale-95" id="modalPanel">

                    <div class="h-64 md:h-80 w-full overflow-hidden relative">
                        <img id="modalImage" src="" alt="Detalle" class="w-full h-full object-cover">
                        <div class="absolute inset-0 bg-gradient-to-t from-[#1a1a1a] to-transparent"></div>
                        <button onclick="closeModal()" class="absolute top-4 right-4 bg-black/50 hover:bg-white hover:text-black text-white w-10 h-10 rounded-full flex items-center justify-center transition-all backdrop-blur-md z-20">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                        </button>
                    </div>

                    <div class="px-8 py-10 md:px-12 md:py-12 relative -mt-20">
                        <span class="inline-block bg-rust-600 text-white text-[10px] font-black uppercase tracking-widest px-3 py-1 mb-4 rounded-sm shadow-lg">Novedad</span>

                        <h3 class="text-3xl md:text-5xl font-black font-slab text-white mb-4 leading-tight" id="modalTitle">
                            T칤tulo
                        </h3>

                        <div class="flex items-center gap-6 text-xs md:text-sm text-gray-400 mb-8 border-b border-white/10 pb-6 font-mono uppercase tracking-wide">
                            <span class="flex items-center gap-2">
                                <svg class="w-4 h-4 text-gold-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                                <span id="modalAuthor">Autor</span>
                            </span>
                            <span class="flex items-center gap-2">
                                <svg class="w-4 h-4 text-gold-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                <span id="modalDate">Fecha</span>
                            </span>
                        </div>

                        <div class="prose prose-invert prose-lg max-w-none">
                            <p class="text-gray-300 whitespace-pre-line leading-loose font-serif text-lg" id="modalContent">
                                Contenido...
                            </p>
                        </div>

                        <div class="mt-12 pt-8 border-t border-white/10 text-center">
                            <button onclick="closeModal()" class="inline-block px-8 py-3 border border-white/30 text-white hover:bg-white hover:text-black font-bold uppercase tracking-[0.2em] text-xs transition-all">
                                Cerrar Noticia
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function openModal(element) {
            // Llenar datos
            document.getElementById('modalTitle').textContent = element.getAttribute('data-title');
            document.getElementById('modalAuthor').textContent = element.getAttribute('data-author');
            document.getElementById('modalDate').textContent = element.getAttribute('data-date');
            document.getElementById('modalContent').textContent = element.getAttribute('data-content');
            document.getElementById('modalImage').src = element.getAttribute('data-image');

            // Mostrar Modal
            const modal = document.getElementById('newsModal');
            const backdrop = document.getElementById('modalBackdrop');
            const panel = document.getElementById('modalPanel');

            modal.classList.remove('hidden');

            // Animaci칩n de entrada
            setTimeout(() => {
                backdrop.classList.remove('opacity-0');
                panel.classList.remove('opacity-0', 'scale-95');
                panel.classList.add('opacity-100', 'scale-100');
            }, 10);
        }

        function closeModal() {
            const modal = document.getElementById('newsModal');
            const backdrop = document.getElementById('modalBackdrop');
            const panel = document.getElementById('modalPanel');

            // Animaci칩n de salida
            backdrop.classList.add('opacity-0');
            panel.classList.remove('opacity-100', 'scale-100');
            panel.classList.add('opacity-0', 'scale-95');

            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300); // Esperar a que termine la transici칩n
        }

        document.addEventListener('keydown', function (event) {
            if (event.key === "Escape") closeModal();
        });
    </script>
</div>