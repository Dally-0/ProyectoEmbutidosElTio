@model ProyectoFinalEmbutidosElTio.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md border-t-4 border-orange-500">
        <h1 class="text-2xl font-bold text-gray-800 mb-6">Editar Usuario</h1>
        
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <input type="hidden" asp-for="IdUsuario" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div class="mb-4">
                    <label asp-for="Nombre" class="block text-gray-700 text-sm font-bold mb-2">Nombre</label>
                    <input asp-for="Nombre" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-orange-500" />
                    <span asp-validation-for="Nombre" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="ApPaterno" class="block text-gray-700 text-sm font-bold mb-2">Apellido Paterno</label>
                    <input asp-for="ApPaterno" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-orange-500" />
                    <span asp-validation-for="ApPaterno" class="text-red-500 text-xs italic"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                 <div class="mb-4">
                    <label asp-for="ApMaterno" class="block text-gray-700 text-sm font-bold mb-2">Apellido Materno</label>
                    <input asp-for="ApMaterno" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-orange-500" />
                    <span asp-validation-for="ApMaterno" class="text-red-500 text-xs italic"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Celular" class="block text-gray-700 text-sm font-bold mb-2">Celular</label>
                    <input asp-for="Celular" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-orange-500" />
                    <span asp-validation-for="Celular" class="text-red-500 text-xs italic"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Correo" class="block text-gray-700 text-sm font-bold mb-2">Correo</label>
                 <!-- Email editing might be sensitive but allowed for admin -->
                <input asp-for="Correo" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-orange-500" />
                <span asp-validation-for="Correo" class="text-red-500 text-xs italic"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div class="mb-4">
                    <label asp-for="IdRol" class="block text-gray-700 text-sm font-bold mb-2">Rol</label>
                    <select asp-for="IdRol" class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-orange-500" asp-items="ViewBag.IdRol"></select>
                </div>
                 <div class="mb-4">
                    <label asp-for="IdEstadoUsuario" class="block text-gray-700 text-sm font-bold mb-2">Estado Cuenta</label>
                    <select asp-for="IdEstadoUsuario" class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-orange-500" asp-items="ViewBag.IdEstadoUsuario"></select>
                </div>
            </div>
            
             <div class="mb-4">
                 <label class="inline-flex items-center">
                    <input asp-for="Activo" class="form-checkbox h-5 w-5 text-orange-600" />
                    <span class="ml-2 text-gray-700">Usuario Activo (Sistema)</span>
                </label>
            </div>

            <div class="flex items-center justify-between">
                <a asp-action="Index" class="text-gray-600 hover:text-gray-800 font-bold">Cancelar</a>
                <input type="submit" value="Guardar Cambios" class="bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
