@model ProyectoFinalEmbutidosElTio.Models.Producto
@{
    ViewData["Title"] = Model.Nombre;
}

<div class="bg-gray-50 py-12 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Breadcrumb -->
        <nav class="flex mb-8 text-sm" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a asp-controller="Home" asp-action="Index" class="text-gray-500 hover:text-orange-600 font-medium">Inicio</a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                        <a asp-controller="Tienda" asp-action="Index" class="text-gray-500 hover:text-orange-600 font-medium">Tienda</a>
                    </div>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
                        <span class="text-orange-600 font-semibold">@Model.Nombre</span>
                    </div>
                </li>
            </ol>
        </nav>

        <div class="bg-white rounded-3xl shadow-xl overflow-hidden">
            <div class="grid grid-cols-1 md:grid-cols-2">
                
                <!-- Product Image -->
                <div class="relative h-96 md:h-auto bg-gray-100 p-8 flex items-center justify-center">
                    <img src="@(string.IsNullOrEmpty(Model.ImagenUrl) ? "https://via.placeholder.com/800x800" : Model.ImagenUrl)" 
                         alt="@Model.Nombre" 
                         class="w-full h-full object-contain hover:scale-105 transition-transform duration-500 drop-shadow-2xl">
                    
                    <div class="absolute top-6 left-6">
                        @if (Model.Stock > 0)
                        {
                            <span class="bg-green-100 text-green-800 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">Disponible</span>
                        }
                        else
                        {
                            <span class="bg-red-100 text-red-800 text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide">Agotado</span>
                        }
                    </div>
                </div>

                <!-- Product Info -->
                <div class="p-10 flex flex-col justify-center">
                    <h1 class="text-4xl font-extrabold text-gray-900 mb-4">@Model.Nombre</h1>
                    
                    <div class="mb-6">
                         <span class="text-sm text-gray-500 uppercase tracking-widest font-semibold">Categor√≠a: @Model.Categoria?.NombreTipo</span>
                    </div>

                    <p class="text-gray-600 text-lg mb-8 leading-relaxed">
                        @Model.Descripcion
                    </p>

                    <div class="flex items-end mb-8">
                        <span class="text-5xl font-bold text-orange-600">@Model.Precio.ToString("C")</span>
                        <span class="ml-2 text-gray-400 text-lg mb-2">/ unidad</span>
                    </div>

                    @if (Model.Stock > 0)
                    {
                        <form asp-controller="Carrito" asp-action="AddToCart" method="post" class="space-y-6">
                            <input type="hidden" name="productId" value="@Model.IdProducto" />
                            
                            <div class="flex items-center space-x-4">
                                <label for="quantity" class="text-gray-700 font-medium">Cantidad:</label>
                                <div class="flex items-center border border-gray-300 rounded-lg">
                                    <button type="button" onclick="decrement()" class="px-4 py-2 hover:bg-gray-100 text-gray-600 transition">-</button>
                                    <input type="number" id="quantity" name="quantity" value="1" min="1" max="@Model.Stock" class="w-16 text-center border-none focus:ring-0 p-2" readonly>
                                    <button type="button" onclick="increment()" class="px-4 py-2 hover:bg-gray-100 text-gray-600 transition">+</button>
                                </div>
                                <span class="text-sm text-gray-500">(@Model.Stock disponibles)</span>
                            </div>

                            <button type="submit" class="w-full md:w-auto bg-orange-600 text-white font-bold py-4 px-12 rounded-xl shadow-lg hover:bg-orange-700 hover:shadow-orange-500/30 transform hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-2">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
                                A√±adir al Carrito
                            </button>
                        </form>
                    }
                    
                    <!-- Trust Badges -->
                    <div class="mt-10 grid grid-cols-2 gap-4 pt-8 border-t border-gray-100">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center text-orange-600">
                                üõ°Ô∏è
                            </div>
                            <span class="text-sm font-medium text-gray-600">Garant√≠a de Calidad</span>
                        </div>
                         <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-orange-100 flex items-center justify-center text-orange-600">
                                üöö
                            </div>
                            <span class="text-sm font-medium text-gray-600">Env√≠o R√°pido</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function increment() {
        const input = document.getElementById('quantity');
        const max = parseInt(input.getAttribute('max'));
        let val = parseInt(input.value);
        if (val < max) input.value = val + 1;
    }
    
    function decrement() {
        const input = document.getElementById('quantity');
        let val = parseInt(input.value);
        if (val > 1) input.value = val - 1;
    }
</script>
