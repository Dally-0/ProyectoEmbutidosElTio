@model ProyectoFinalEmbutidosElTio.Models.Producto
@{
    ViewData["Title"] = Model.Nombre;
}

<div class="relative min-h-screen bg-[#050505] -mt-24 pt-24 overflow-hidden flex items-center justify-center">

    <div class="absolute inset-0 bg-gradient-to-t from-orange-900/30 via-black to-black pointer-events-none"></div>
    <div class="absolute bottom-0 left-1/4 w-96 h-96 bg-orange-600 rounded-full blur-[150px] opacity-30 animate-pulse-slow pointer-events-none"></div>

    <div class="absolute top-32 left-4 lg:left-12 z-50">
        <a asp-action="Index" class="flex items-center gap-3 bg-white/10 hover:bg-white text-white hover:text-black px-6 py-3 rounded-full backdrop-blur-md border border-white/20 transition-all duration-300 group shadow-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover:-translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            <span class="text-xs font-black uppercase tracking-[0.2em]">Volver</span>
        </a>
    </div>

    <div class="max-w-screen-2xl w-full mx-auto px-4 sm:px-6 lg:px-12 relative z-10 flex flex-col lg:flex-row items-center justify-center h-full gap-12 lg:gap-0 mt-12 lg:mt-0">

        <div class="w-full lg:w-3/5 h-[40vh] lg:h-[70vh] relative group perspective-1000 flex items-center justify-center p-8 lg:pr-20">

            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-2/3 h-2/3 bg-orange-500/10 blur-[100px] rounded-full pointer-events-none"></div>

            <img src="@(string.IsNullOrEmpty(Model.ImagenUrl) ? "https://via.placeholder.com/800x800?text=Sin+Imagen" : Model.ImagenUrl)"
                 alt="@Model.Nombre"
                 class="relative w-full h-full object-contain drop-shadow-[0_30px_60px_rgba(0,0,0,0.9)] transform transition-transform duration-700 group-hover:scale-105 group-hover:-rotate-2 z-10 filter contrast-125 saturate-110">

            <div class="absolute bottom-4 lg:bottom-8 left-4 lg:left-8 bg-black/80 border-l-4 border-gold-500 px-6 py-4 backdrop-blur-md shadow-2xl">
                <span class="block text-[10px] text-gray-400 uppercase tracking-[0.2em] mb-1 font-bold">Origen</span>
                <div class="flex items-center gap-3">
                    <span class="text-2xl">ðŸ‡§ðŸ‡´</span>
                    <div>
                        <span class="block text-white font-black font-slab tracking-wider text-sm">COCHABAMBA</span>
                        <span class="block text-gray-500 text-[10px] uppercase tracking-widest">Calidad Garantizada</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-full lg:w-[550px] relative z-20 lg:translate-x-12 mb-12 lg:mb-0">

            <div class="bg-[#f4f1ea] text-[#1a1a1a] p-8 lg:p-14 relative shadow-[0_50px_100px_-20px_rgba(0,0,0,0.9)] transform lg:rotate-1 border border-[#dcd8cf]">

                <div class="absolute inset-0 pointer-events-none opacity-60 mix-blend-multiply" style="background-image: url('https://www.transparenttextures.com/patterns/cream-paper.png');"></div>

                <div class="relative z-10 flex flex-col h-full">

                    <div class="flex justify-between items-start mb-6">
                        <span class="text-rust-600 font-black uppercase tracking-[0.3em] text-[10px] border-b-2 border-rust-600 pb-1">
                            @Model.Categoria?.NombreTipo
                        </span>
                    </div>

                    <h1 class="text-5xl lg:text-7xl font-black font-slab leading-[0.85] tracking-tight text-black uppercase mb-6 break-words drop-shadow-sm">
                        @Model.Nombre
                    </h1>

                    <div class="flex items-baseline gap-2 mb-8">
                        <span class="text-6xl font-black font-slab text-gold-600 tracking-tighter drop-shadow-md">
                            @Model.Precio_final.ToString("0")
                        </span>
                        <div class="flex flex-col">
                            <span class="text-xl font-bold text-black leading-none">Bs</span>
                            <span class="text-[10px] text-gray-500 uppercase tracking-widest">Precio Final</span>
                        </div>
                    </div>

                    <div class="w-full h-1 bg-[#1a1a1a] mb-8 relative opacity-10"></div>

                    <p class="text-[#1a1a1a] text-base leading-relaxed mb-8 font-serif font-medium text-justify">
                        @Model.Descripcion
                    </p>

                    <div class="grid grid-cols-2 gap-x-8 gap-y-6 mb-10 bg-black/5 p-6 border border-black/10">
                        <div>
                            <span class="block text-[9px] font-bold text-gray-500 uppercase tracking-[0.2em] mb-2">
                                @(Model.IdCategoria == 1 || Model.IdCategoria == 4 ? "Proceso" : "Estado")
                            </span>
                            <div class="flex items-center gap-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-rust-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span class="font-black text-lg text-black font-slab uppercase">
                                    @(Model.IdCategoria == 1 || Model.IdCategoria == 4 ? "Madurado" : "Fresco")
                                </span>
                            </div>
                        </div>
                        <div>
                            <span class="block text-[9px] font-bold text-gray-500 uppercase tracking-[0.2em] mb-2">Disponibilidad</span>
                            <div class="flex items-center gap-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-rust-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                                </svg>
                                <span class="font-black text-lg text-black font-slab uppercase">
                                    @(Model.Stock > 10 ? "Alta" : "Limitada")
                                </span>
                            </div>
                        </div>
                    </div>

                    @if (Model.Activo && Model.Stock > 0)
                    {
                        <form asp-controller="Carrito" asp-action="AddToCart" method="post" class="mt-auto">
                            <input type="hidden" name="productId" value="@Model.IdProducto" />

                            <div class="flex items-center justify-between mb-6 bg-white border border-[#dcd8cf] p-1 shadow-sm">
                                <span class="font-black text-[10px] uppercase tracking-[0.2em] text-gray-500 pl-4">Cantidad</span>
                                <div class="flex items-center bg-[#f4f1ea]">
                                    <button type="button" onclick="decrement()" class="w-12 h-12 flex items-center justify-center text-black hover:bg-black hover:text-white font-black text-xl transition-colors">-</button>
                                    <input type="number" id="quantity" name="quantity" value="1" min="1" max="@Model.Stock" class="w-14 text-center border-none p-0 text-xl font-black bg-transparent focus:ring-0" readonly>
                                    <button type="button" onclick="increment()" class="w-12 h-12 flex items-center justify-center text-black hover:bg-black hover:text-white font-black text-xl transition-colors">+</button>
                                </div>
                            </div>

                            <button type="submit" class="w-full bg-[#d92e2e] text-white font-black uppercase tracking-[0.2em] py-5 shadow-[0_10px_30px_rgba(217,46,46,0.3)] hover:bg-black hover:shadow-xl hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-3 text-sm group relative overflow-hidden">
                                <span class="absolute inset-0 bg-white/20 transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.929-7.071s.5 2.5 3 4.5 5.657-1.429 5.657-5.657a8 8 0 01-2.929 16.844z" />
                                </svg>
                                <span class="text-xl font-black tracking-wider">AGREGAR AL PEDIDO</span>
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="bg-[#1a1a1a] p-6 text-center border-2 border-dashed border-rust-600/50 mt-auto">
                            <span class="block text-3xl font-black text-rust-500 uppercase tracking-[0.2em] mb-2 transform -rotate-2">Agotado</span>
                            <span class="text-gray-500 text-xs uppercase tracking-widest">Sin existencias por el momento</span>
                        </div>
                    }

                </div>
            </div>

            <div class="absolute top-6 left-6 w-full h-full bg-black/40 blur-2xl -z-10 transform rotate-3 rounded-sm"></div>

        </div>

    </div>
</div>

<script>
    function increment() {
        const input = document.getElementById('quantity');
        const max = parseInt(input.getAttribute('max'));
        let val = parseInt(input.value);
        if (val < max) input.value = val + 1;
    }

    function decrement() {
        const input = document.getElementById('quantity');
        let val = parseInt(input.value);
        if (val > 1) input.value = val - 1;
    }
</script>

<style>
    .animate-pulse-slow {
        animation: pulse 8s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
</style>