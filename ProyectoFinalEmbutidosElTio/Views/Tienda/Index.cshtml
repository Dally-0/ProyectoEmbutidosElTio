@model IEnumerable<ProyectoFinalEmbutidosElTio.Models.Producto>

@{
    ViewData["Title"] = "Nuestros Productos";
}

<div class="bg-white">
    <div class="container mx-auto px-4 py-8">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                <span class="block xl:inline">Embutidos</span>
                <span class="block text-orange-600 xl:inline">El Tío</span>
            </h1>
            <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                Calidad y sabor tradicional en cada bocado. Explora nuestra selección premium.
            </p>
        </div>

        <!-- Search & Filter Section -->
        <div class="mb-10">
            <!-- Search Bar -->
            <form asp-action="Index" method="get" class="max-w-xl mx-auto mb-8">
                <div class="relative flex items-center">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                           placeholder="Buscar productos (ej. Chorizo, Jamón...)"
                           class="w-full px-5 py-3 border border-gray-300 rounded-full shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition duration-150 ease-in-out" />
                    
                    @if (ViewData["CurrentCategoria"] != null)
                    {
                        <input type="hidden" name="categoriaId" value="@ViewData["CurrentCategoria"]" />
                    }

                    <button type="submit" class="absolute right-2 bg-orange-600 text-white p-2 rounded-full hover:bg-orange-700 focus:outline-none transition transform hover:scale-105">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </button>
                </div>
            </form>

            <!-- Categories Filter -->
            <div class="flex flex-wrap justify-center gap-3">
                 <a asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]"
                    class="px-5 py-2 rounded-full text-sm font-medium transition shadow-sm
                    @(ViewData["CurrentCategoria"] == null ? "bg-orange-600 text-white shadow-orange-500/30" : "bg-white text-gray-700 hover:bg-gray-50 border border-gray-200")">
                    Todos
                 </a>

                 @if (ViewData["Categorias"] is List<ProyectoFinalEmbutidosElTio.Models.Categoria> categorias)
                 {
                     foreach (var cat in categorias)
                     {
                         <a asp-action="Index" asp-route-categoriaId="@cat.IdCategoria" asp-route-searchString="@ViewData["CurrentFilter"]"
                            class="px-5 py-2 rounded-full text-sm font-medium transition shadow-sm
                            @(ViewData["CurrentCategoria"]?.ToString() == cat.IdCategoria.ToString() ? "bg-orange-600 text-white shadow-orange-500/30" : "bg-white text-gray-700 hover:bg-gray-50 border border-gray-200")">
                            @cat.NombreTipo
                         </a>
                     }
                 }
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            @foreach (var item in Model)
            {
                <div class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform duration-300 hover:scale-105 border border-gray-100">
                    <div class="relative pb-48 overflow-hidden">
                        <img class="absolute inset-0 h-full w-full object-cover" 
                             src="@(string.IsNullOrEmpty(item.ImagenUrl) ? "https://via.placeholder.com/300x300?text=No+Image" : item.ImagenUrl)" 
                             alt="@item.Nombre">
                         @if(!item.Activo || item.Stock <= 0) {
                             <div class="absolute inset-0 bg-gray-900 bg-opacity-60 flex items-center justify-center">
                                 <span class="text-white font-bold text-xl uppercase">Agotado</span>
                             </div>
                         }
                    </div>
                    <div class="p-6">
                        <div class="flex items-baseline">
                            <span class="inline-block bg-orange-100 text-orange-800 text-xs px-2 rounded-full uppercase font-semibold tracking-wide">
                                @item.Categoria?.NombreTipo
                            </span>
                        </div>
                        <h4 class="mt-2 text-xl font-bold text-gray-900 leading-tight truncate">
                            @item.Nombre
                        </h4>
                        <div class="mt-1 text-gray-600 text-sm h-12 overflow-hidden">
                            @item.Descripcion
                        </div>
                         <div class="mt-4 flex justify-between items-center">
                            <span class="text-2xl font-bold text-gray-900">$@item.Precio_final</span>
                             @if(item.Activo && item.Stock > 0) {
                                <a asp-action="Details" asp-route-id="@item.IdProducto" class="text-white bg-orange-600 hover:bg-orange-700 px-4 py-2 rounded shadow-md transition">
                                    Ver Detalles
                                </a>
                             } else {
                                 <button disabled class="bg-gray-400 text-white px-4 py-2 rounded cursor-not-allowed">Agotado</button>
                             }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
